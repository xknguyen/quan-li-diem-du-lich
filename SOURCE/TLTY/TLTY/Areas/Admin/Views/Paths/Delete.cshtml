@model EntityModel.EF.Path

@{
	ViewBag.Title = "Xóa đường dẫn "+@Model.PathName;
	Layout = null;//"~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="deleteModal" style="display: block !important;">
	<div class="modal-dialog modal-sm" style="overflow-y: initial !important;overflow-y: scroll; max-height:85%;  margin-top: 50px; margin-bottom:50px;">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">
					<span aria-hidden="true">&times;</span>
					<span class="sr-only">Close</span>
				</button>
				<h4 class="modal-title">Xóa đường dẫn @Model.PathName</h4>
			</div>
			<div class="modal-body" style="height: 250px;overflow-y: auto;">
				<h4>Bạn có muốn xóa đường dẫn <strong style="color: red;">@Model.PathName</strong> này không?</h4>
				<div class="clearfix"></div>
			</div>
			<div class="modal-footer">
				<div class="form-actions no-color text-center">
					@using (Html.BeginForm())
					{
						@Html.AntiForgeryToken()
						<input type="submit" value="Xóa" class="btn btn-warning" />
						<button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
					}

				</div>
			</div>
		</div>
	</div>
</div>

