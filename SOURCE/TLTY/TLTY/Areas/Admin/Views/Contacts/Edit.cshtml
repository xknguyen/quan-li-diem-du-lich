@model EntityModel.EF.Contact

@{
    ViewBag.Title = "Chỉnh sửa liên hệ" + Model.ID;
    Layout = null;// "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="modal fade" id="editModal">
    <div class="modal-dialog modal-lg" >
        <div class="modal-content">
            @using (Html.BeginForm())
            {
                <div class="modal-body" style="max-height: 550px;overflow-y: auto;">
					<button type="button" class="close" data-dismiss="modal">
						<span aria-hidden="true">&times;</span>
						<span class="sr-only">Close</span>
					</button>
					<h3 style="text-align: center">Chỉnh sửa liên hệ @Model.ID</h3>
					<img src="~/Content/ClientTheme/image/1.png" class="img-responsive" />
					@Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)
                        @Html.HiddenFor(model => model.CreateDate)
                        @Html.HiddenFor(model => model.UserName)
                        @Html.HiddenFor(model => model.Status)
						<div class="form-group">
							<label class="control-label col-md-3">Địa chỉ:</label>
							<div class="col-md-9">
								@Html.TextBoxFor(model => model.Address, new { @class = "form-control", placeholder = "Nhập địa chỉ ở đây. Không quá 250 ký tự.", max="250" })
								@Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-md-3">Số điện thoại:</label>
							<div class="col-md-9">
								@Html.TextBoxFor(model => model.Phone, new { @class = "form-control", placeholder = "Nhập số điện thoại ở đây. Không quá 50 ký tự.", max="50" })
								@Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
							</div>
						</div>
	                    <div class="form-group">
		                    <label class="control-label col-md-3">Email:</label>
		                    <div class="col-md-9">
			                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Nhập email ở đây. Không quá 250 ký tự.", max="250" })
			                    @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
		                    </div>
	                    </div>
						<div class="form-group">
							<hr />
							<div class="form-actions no-color text-center">
								<button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Thay đổi</button>
								<button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times"></i> Đóng</button>
							</div>
						</div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            }
        </div>
    </div>
